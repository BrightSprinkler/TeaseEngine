<UserControl x:Class="TeaseEngine.Controls.SelectStorageFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeaseEngine.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="185" Loaded="UserControl_Loaded">
    <Border BorderBrush="Black" BorderThickness="2" Margin="2,2,3,2">
        <Grid>
            <Label Content="Label" x:Name="NameLabel" Margin="4,10,5,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="11"/>
            <Label Content="" Foreground="Red" x:Name="ErrorLabel" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="165" FontSize="9"/>
            <Button Content="Restore" x:Name="RestoreButton" Margin="10,64,0,10" Click="RestoreButton_Click" HorizontalAlignment="Left" Width="67"></Button>
            <Button Content="Save" x:Name="SaveButton" Margin="0,64,10,10" Click="SaveButton_Click" HorizontalAlignment="Right" Width="68"></Button>
        </Grid>
    </Border>
</UserControl>
