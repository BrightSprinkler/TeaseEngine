<UserControl x:Class="TeaseEngine.Controls.UserInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeaseEngine.Controls"
             mc:Ignorable="d" d:DesignWidth="800" Height="56.122">
    <Grid>
        <TextBox x:Name="InputTextBox" VerticalContentAlignment="Center" HorizontalAlignment="Center" Foreground="White" Height="36" Margin="10" TextWrapping="Wrap" Width="780" FontSize="22" Padding="3,0" KeyDown="InpuTextBox_KeyDown" BorderBrush="{x:Null}">
            <TextBox.Background>
                <SolidColorBrush Color="Black" Opacity="0.75"/>
            </TextBox.Background>
        </TextBox>
    </Grid>
</UserControl>
